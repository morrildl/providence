<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dude.morrildl.lifer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />

    <permission
        android:name="dude.morrildl.lifer.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="dude.morrildl.lifer.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".gcm.LiferActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".photos.NewPhotoReceiver"
            android:exported="false"
            android:label="NewPhotoReceiver" >
            <intent-filter>
                <action android:name="android.hardware.action.NEW_PICTURE" />

                <data android:mimeType="image/*" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="dude.morrildl.lifer.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="dude.morrildl.lifer" />
            </intent-filter>
        </receiver>

        <service
            android:name=".photos.PhotoUploaderService"
            android:exported="false" />
        <service android:name=".gcm.GCMIntentService" />
    </application>

</manifest>